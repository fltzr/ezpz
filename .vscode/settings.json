{
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "deno.enablePaths": ["supabase/functions"],
  "deno.lint": true,
  "deno.importMap": "../supabase/functions/import-map",
  "editor.codeActionsOnSave": {
    "source.addMissingImports.ts": "always",
    "source.fixAll.eslint": "always",
    "source.fixAll.ts": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "workbench.colorTheme": "Default Dark+",
  "explorer.compactFolders": false,
  "editor.fontFamily": "'Monaspace Argon', monospace",
  "editor.fontWeight": "500",
  "chat.editor.fontFamily": "'Monaspace Kyoto', monospace",
  "editor.inlayHints.fontFamily": "'Monaspace Krypton', monospace",
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'",
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true
}
